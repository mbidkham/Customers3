
<?xml version="1.0"?>
<page title="ویرایش ">
    <section title="جستجو ">
        <search label="کد ثبت ارگان / شرکت:"
                singleResultSearch="ws/searchLegal"
                singleResultSearchInputkey="legalCode"
                selectedResultKey="legalCode"
                value="obj">



        </search>
    </section>
    <section title="نتایج جستجو ">
        <input label="نام ارگان / شرکت  :" type="text" value="obj.name" />
        <input label="کد ثبت ارگان / شرکت  :" type="text" value="obj.legalCode" />

        <input label="تلفن  :" type="text" value="tel" />

        <section label="آدرس: "  >
            <input label="استان :" type="text" value="obj.address.province" />
            <input label="شهر :" type="text" value="obj.address.city" />
            <input label="خیابان :" type="text" value="obj.address.street" />
            <input label="کد پسنی :" type="text" value="obj.address.postalCode" />

        </section>
        <actions>
            <button label="save">
                <webService address="ws/saveLegalPerson" clearPageOnSuccess="true">
                    <webServiceInputObject name="obj"/>
                </webService>
            </button>
        </actions>

    </section>
</page>






